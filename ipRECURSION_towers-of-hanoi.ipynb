   "source": [
    "\n",
    "def tower_of_hanoi(n, a=1, b=2, c=3, steps=[]):\n",
    "    if n == 0:\n",
    "        return\n",
    "    tower_of_hanoi(n-1, a, c, b)\n",
    "    steps.append([a, c])\n",
    "    tower_of_hanoi(n-1, b, a, c)\n",
    "    return steps\n",
    "tower_of_hanoi(4)"
   ]
  }
